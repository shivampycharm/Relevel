//Write a function astroguru that:
//A: Takes four arguments: number of children, spouses name, location and job
//B: Output the following string: “You will be a ‘job’ in ‘location’ and married to ‘partner’ with ‘numkids’.”

var job;
var location;
var spouse;
var children;

function astroguru(a, b, c, d)
{
    let a = readline.question("Enter your job profile : ");
    let b = readline.question("Enter your job location : ");
    let c = readline.question("Enter your spouse's name : ");
    let d = readline.question("How many children have you? Please Enter : ");

    console.log("You will be a ", a, "in ", b, "and married to ", c, "with ", d, "children");
}

astroguru(job, location, spouse, children);




//Write a function that compares two numbers and returns the larger of the two. Bonus: Output appropriate message if numbers cant be compared or are equal


var n1;
var n2;

function compare(a, b)
{
    a = Number(readline.question("Enter your first number : "));
    b = Number(readline.question("Enter your second number : "));

    if(a>b)
    {
        return a;
    }
    else if(a<b)
    {
        return b;
    }
    else
    {
        console.log("Both numbers are equal.")
    }
}

console.log("Largest number is ",compare(n1,n2));
